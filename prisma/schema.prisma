// Prisma schema for SaaS starter - Neon Postgres
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  admin
  member
}

model User {
  id                String         @id @default(cuid())
  clerkUserId       String         @unique
  email             String?
  name              String?
  phone             String?
  profileImageUrl   String?        // R2 URL/key for display via /api/files/...
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  files             File[]
  organizations     OrganizationMember[]
  groupMembers      GroupMember[]
}

model Organization {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  members   OrganizationMember[]
}

model OrganizationMember {
  id             String       @id @default(cuid())
  userId         String
  organizationId String
  role           Role         @default(member)
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())

  @@unique([userId, organizationId])
  @@index([userId])
  @@index([organizationId])
}

model File {
  id        String   @id @default(cuid())
  name      String
  url       String
  size      Int      // bytes
  key       String   // R2 object key for deletion
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([userId])
}

model Group {
  id             String        @id @default(cuid())
  name           String        @db.VarChar(100)
  description    String?       @db.VarChar(500)
  logoUrl        String?
  parentGroupId  String?
  parentGroup    Group?        @relation("GroupHierarchy", fields: [parentGroupId], references: [id], onDelete: SetNull)
  childGroups    Group[]       @relation("GroupHierarchy")
  members        GroupMember[]
  pages          Page[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([parentGroupId])
}

model GroupMember {
  userId   String
  groupId  String
  role     Role     @default(member)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  group    Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, groupId])
  @@index([userId])
  @@index([groupId])
}

model Page {
  id                 String   @id @default(cuid())
  groupId            String
  title              String   @db.VarChar(200)
  description        String?  @db.VarChar(500)
  coverPhotoUrl      String?
  parentGroupLogoUrl String?
  childGroupLogoUrl  String?
  group              Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@index([groupId])
}
